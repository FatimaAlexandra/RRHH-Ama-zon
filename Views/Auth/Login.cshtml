@model Usuario
<br /><br /><br /><br /><br />

<main class="card">
    <div class="card-body d-flex justify-content-center">

        <section class="card w-50">
            <div class="card-header" style="background-color: #34495E ; color: #EAECEE ;">
                <h2 class="text-center">LOGIN</h2>
            </div>
            <div class="card-body">
                <form method="post" action="/Auth/Login">
                    <label>Usuario</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-user-astronaut"></i>
                        </span>
                        <input asp-for="@Model.Usuario1" class="form-control" autofocus required />
                    </div>

                    <label class="mt-2">Contraseña</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="fas fa-duotone fa-lock"></i>
                        </span>
                        <input asp-for="@Model.Clave" type="password" class="form-control" required />
                    </div>

                    <div class="d-flex justify-content-end">
                        <input type="submit" value="Ingresar" class="btn btn-success" style="background-color: #34495E; border-color: #1B2631 ;" />
                    </div>
                </form>
            </div>
        </section>

    </div>
</main>

@if (TempData["error"] != null && !TempData["error"].Equals(""))
{
    <script>
        swal({
            title: "Error!",
            text: '@TempData["error"]',
            icon: "error",
            button: "Ok!",
        });
    </script>
}
